@model IEnumerable<Post>
@{ 
    Layout = null;
}

<div>
    <table class="table table-no-shadow">
        <thead>
            <tr>
                <th>回复</th>
                <th>发表时间</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td><a asp-action="Thread" asp-controller="Forum" asp-route-id="@x.ThreadId">回复：@x.Thread.Title</a></td>
                    <td datetime="@x.Time.ToTimeStamp()">@x.Time</td>
                </tr>
            }
        </tbody>
    </table>

    @Html.Paging()
</div>